<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".view.SignInActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tokonezia"
                android:textColor="#fff"
                android:textSize="40dp"
                android:gravity="center_vertical|center_horizontal" />

            <EditText
                android:id="@+id/edit_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username or Email"
                android:drawableLeft="@drawable/ic_account_box_24dp"
                android:drawablePadding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:background="@drawable/white_transparent"
                android:maxLines="1"
                android:singleLine="true"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="herusantoso23"/>

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:drawableLeft="@drawable/ic_lock_24dp"
                android:drawablePadding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:inputType="textPassword"
                android:background="@drawable/white_transparent"
                android:maxLines="1"
                android:singleLine="true"
                android:padding="10dp"
                android:text="welcome1"
                android:textColor="#fff" />

            <Button
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/button_sign_in"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:text="Sign In"
                android:textStyle="bold"
                android:background="@drawable/white_border_transparent"
                android:textColor="#fff"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donâ€™t have an account ?"
                    android:textColor="#80ffffff"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/text_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up"
                    android:textColor="#ffffff"
                    android:paddingLeft="5dp"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>